}

QGroupBox {
    font-weight: bold;
    margin-top: 10px;
    margin-bottom: 10px;   /* space between groups */
    padding: 6px;
    border: 1px solid #666;
    border-radius: 4px;
    background: #1a1a1a;
}
QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 6px;
    margin-top: 2px;
    color: #33ff33;
}

QStatusBar {
    background-color: #2d2d2d;
    color: #d0ffd0;
    font-family: Consolas;
    font-size: 12px;
}
QLabel#status {
    font-size: 11px;
    color: #ccc;
    padding: 2px 0;
    margin: 0;
}
QLabel.subheader {
    font-weight: bold;
    padding: 2px;
    margin-top: 6px;
    margin-bottom: 2px;
    color: #ccc;
}
QGroupBox#logs {
    margin-top: 12px;
}
QLabel#agentHeader {
    padding: 4px 0;
    margin: 0;
    font-size: 12px;
    color: #eee;
}