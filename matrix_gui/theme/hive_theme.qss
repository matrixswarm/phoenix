QGroupBox {
    border: 1.5px solid #ccc;
    border-radius: 6px;
    margin-top: 12px;
    font-weight: bold;
    padding: 6px;
}
QGroupBox::title {
    subcontrol-origin: margin;
    left: 10px;
    padding: 0 4px;
    color: #0078d7;
}
QStatusBar {
    background-color: #2d2d2d;
    color: #d0ffd0;
    font-family: Consolas;
    font-size: 12px;
}
