}

QGroupBox {
    font-weight: bold;
    margin-top: 10px;
    margin-bottom: 10px;   /* space between groups */
    padding: 6px;
    border: 1px solid #666;
    border-radius: 4px;
    background: #1a1a1a;
}
QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 6px;
    margin-top: 2px;
    color: #33ff33;
}

QStatusBar {
    background-color: #2d2d2d;
    color: #d0ffd0;
    font-family: Consolas;
    font-size: 12px;
}
QLabel#status {
    font-size: 11px;
    color: #ccc;
    padding: 2px 0;
    margin: 0;
}
QLabel.subheader {
    font-weight: bold;
    padding: 2px;
    margin-top: 6px;
    margin-bottom: 2px;
    color: #ccc;
}
QGroupBox#logs {
    margin-top: 12px;
}
QLabel#agentHeader {
    padding: 4px 0;
    margin: 0;
    font-size: 12px;
    color: #eee;
}
QPushButton, QToolButton {
    background: #22252a;
    color: #90fa77;
    border-radius: 7px;
    padding: 7px 18px;
    font-size: 11pt;
    font-weight: 500;
}
QPushButton:hover, QToolButton:hover {
    background: #293033;
    border: 1.5px solid #90fa77;
    color: #fff;
}
QFrame#matrixCard {
    background: #20232a;
    border-radius: 12px;
    border: 1.5px solid #393e46;
    padding: 16px 20px 16px 20px;
    /* Optional: */
    /* box-shadow: 0 2px 24px rgba(100,255,120,0.10); */
}
QFrame#toolbarFrame {
    background: #23272e;
    border-radius: 10px;
    border: 1.5px solid #303640;
    margin-bottom: 16px;
    padding: 10px 12px 10px 16px;
}
QPushButton, QToolButton {
    background: #24282e;
    color: #90fa77;
    border-radius: 7px;
    border: 1px solid #353940;
    padding: 7px 18px;
    font-size: 11pt;
    font-weight: 500;
}
QPushButton:hover, QToolButton:hover {
    background: #2a3033;
    border: 1.5px solid #90fa77;
    color: #fff;
}

QFrame#matrixCard {
    background: #20232a;
    border-radius: 12px;
    border: 1.5px solid #393e46;
    padding: 16px 20px 16px 20px;
}

QTreeWidget, QTextEdit {
    background: transparent;
    border: none;
    color: #e8eaed;
    font-size: 10.5pt;
}

QLabel {
    color: #90fa77;
    font-weight: 600;
}

