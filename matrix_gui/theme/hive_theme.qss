/* --- Global --- */
QMainWindow, QWidget {
    background: #21252b;
    color: #e8eaed;
    font-family: "Segoe UI", Arial, sans-serif;
    font-size: 10.5pt;
}

/* --- Cockpit Title --- */
QLabel#cockpitTitle {
    font-size: 20pt;
    font-weight: 800;
    color: #90fa77;
    letter-spacing: 1px;
    text-shadow: 0 0 8px #053e1e;
    padding: 4px 0;
}

/* --- Section Headers (Deployments, Swarm Feed, etc.) --- */
QLabel#sectionHeader {
    font-size: 13pt;
    font-weight: 700;
    color: #90fa77;
    padding-bottom: 6px;
}

/* --- Card Panels --- */
QFrame#matrixCard, QFrame#deployBarCard {
    background: #23272e;
    border-radius: 10px;
    border: 1.5px solid #393e46;
    padding: 10px 14px;
}

/* --- Deploy Bar Buttons + ComboBox --- */
QWidget#matrixDeployBar QPushButton,
QWidget#matrixDeployBar QComboBox {
    background: #2a2e36;
    color: #90fa77;
    border: 1px solid #444;
    border-radius: 6px;
    padding: 5px 12px;
    font-size: 10.5pt;
    font-weight: 600;
    margin-right: 6px;
}

QWidget#matrixDeployBar QPushButton:hover,
QWidget#matrixDeployBar QComboBox:hover {
    background: #323842;
    border: 1px solid #90fa77;
    color: #ffffff;
}

/* --- Drop-down list styling --- */
QWidget#matrixDeployBar QComboBox QAbstractItemView {
    background: #181a20;
    color: #90fa77;
    selection-background-color: #333;
    selection-color: #fff;
}